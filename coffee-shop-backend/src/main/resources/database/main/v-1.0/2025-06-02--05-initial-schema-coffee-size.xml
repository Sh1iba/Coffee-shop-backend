<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="8" author="Ibrogimov Zafar" runOnChange="true">
        <createTable tableName="coffee_size">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="coffee_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_coffee_size_coffee" references="coffee(id)"/>
            </column>

            <column name="size" type="varchar(5)">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="decimal(6,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
