<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="2025011501" author="Ibrogimov Zafar">
        <createTable tableName="orders">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_orders_user_id" references="users(id)"/>
            </column>

            <column name="total_amount" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>

            <column name="delivery_fee" type="decimal(10,2)" defaultValue="0.00">
                <constraints nullable="false"/>
            </column>

            <column name="delivery_address" type="varchar(500)">
                <constraints nullable="false"/>
            </column>

            <column name="order_date" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>