<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet id="5" author="Trukhmanov Evgeniy" runOnChange="true">
        <createTable tableName="coffee">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="type_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_coffee_type" references="coffee_type(id)"/>
            </column>

            <column name="name" type="varchar(20)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="price" type="decimal(5,2)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="varchar(500)">
                <constraints nullable="false"/>
            </column>

            <column name="image_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>